{
  "name": "heapstats",
  "version": "0.5.5",
  "description": "terminal-based heap allocation plotter",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npx mocha"
  },
  "mocha": {
    "exit": true,
    "bail": true,
    "check-leaks": true,
    "colors": true,
    "global": "leak",
    "spec": [
      "test/*.spec.js",
      "test/*/*/*.spec.js"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "garbage-collector",
    "memory-leak",
    "memory",
    "mocha",
    "nodejs",
    "oilpan",
    "memory-usage",
    "heap",
    "memwatch"
  ],
  "homepage": "https://github.com/nicholaswmin/heapstats#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicholaswmin/heapstats.git"
  },
  "bugs": {
    "url": "https://github.com/nicholaswmin/heapstats/issues"
  },
  "author": "Nicholas Kyriakides <nik.kyriakides[at][gmail.com]> (@nicholaswmin)",
  "license": "MIT",
  "dependencies": {
    "asciichart": "^1.5.25",
    "single-line-log": "^1.1.2",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "mocha": "^10.4.0"
  }
}
